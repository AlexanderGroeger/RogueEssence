<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RogueEssence.Dev.ViewModels;assembly=RogueEssence.Editor.Avalonia"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="RogueEssence.Dev.Views.SearchListBox"
             DataContextChanged="slb_DataContextChanged">
  <Design.DataContext>
    <vm:SearchListBoxViewModel/>
  </Design.DataContext>
  <Grid Margin="4" >
    <Grid.RowDefinitions>
      <RowDefinition Height="20"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Margin="4" VerticalAlignment="Bottom" Text="{Binding DataName}" Grid.Row="0" Grid.Column="0"></TextBlock>
    <TextBox Name="txtSearch" TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding SearchText}" Margin="4" Grid.Row="1" Grid.Column="0"/>
    <ListBox Name="lbxItems" SelectionMode="AlwaysSelected" Items="{Binding SearchItems}" SelectedIndex="{Binding SelectedSearchIndex}" SelectionChanged="lbxItems_SelectionChanged" DoubleTapped="lbxItems_DoubleClick" Margin="4" Grid.Row="2" Grid.Column="0"/>
  </Grid>
</UserControl>
